<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>stock_application</servlet-name>
		<servlet-class>il.ac.mta.Stock_applicationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>stock_application</servlet-name>
		<url-pattern>/stock_application</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Stock_application</servlet-name>
		<servlet-class>il.ac.mta.StockDetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Stock_application</servlet-name>
		<url-pattern>/stockDetails</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
